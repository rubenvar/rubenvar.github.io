mixin card(link, title, tags, repo)
  article
    h2
      a(href!=link target="_blank")
        | #{title}
    block
    .tags
      each tag, i in tags
        span(class!=tag.toLowerCase().replace(/[ \.]/, "")) #{tag}
    if repo
      .github
        a(href!=repo)
          include github


