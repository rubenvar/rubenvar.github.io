mixin card(link, title, tags, repo, wip)
  article
    .text
      h2
        if link
          a(href!=link target="_blank") #{title}
        else
          |#{title}
        if wip
          span.wip ðŸš§
      block
      if repo
        .github
          a(href!=repo target="_blank")
            include github
    .tags
      each tag in tags
        span(class!=tag.toLowerCase().replace(/[ \.]/, "")) #{tag}


