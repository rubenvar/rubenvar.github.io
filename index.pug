mixin card(link, title, tags, repo)
  article
    h2
      if link
        a(href!=link target="_blank") #{title}
      else
        |#{title}
    block
    .tags
      each tag, i in tags
        span(class!=tag.toLowerCase().replace(/[ \.]/, "")) #{tag}
    if repo
      .github
        a(href!=repo target="_blank")
          include github


