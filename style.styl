:root
  --br 5px
  --card-br 15px
  --svelte #ff3e00
  --netlify #099eba
  box-sizing border-box
*, ::before, ::after
  box-sizing inherit
  padding 0
  margin 0
html
  font-family Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif
  font-size 18px
main
  width 720px
  max-width calc(100% - 29px)
  padding 40px 14.5px
  margin 0 auto
h1
  margin-bottom 70px
  font-size 2rem
  text-align center

#projects
  display flex
  flex-direction column
  gap 50px
  article
    border-radius var(--card-br)
    padding 18px
    box-shadow 0 1px 23px 0px rgba(0,0,0,0.21), 0 0 5px 0px rgba(0,0,0,0.13)
    position relative
    transform rotate(-0.47deg)
    transform-origin right bottom
    transition all 0.9s
    &:hover
      transform rotate(0deg)
    h2
      font-size 1.4rem
      margin-bottom 20px
      a
        text-decoration: none
        color #ffcf00
        position relative
        transition all 0.3s
        &::after
          transition all 0.3s
          content ''
          display block
          width 105%
          height 120%
          top 0
          left 0
          transform translateX(-5px) translateY(-2.4px) rotate(1.23deg) skewX(-2deg)
          background-color #345
          position absolute
          border-radius 3px
          z-index -1
        &:hover
          color #ffdc44
          &::after
            transform translateX(-8px) translateY(0.6px) rotate(-2deg) skewX(3deg)
    > p
      margin-bottom 18px
      color grey
    .tags
      margin-top 40px
      font-size 0.8rem
      display flex
      gap 12px
      span
        background lightgrey
        padding 2px 5px
        border-radius var(--br)
        opacity 0.7
        &.js
          background-color #F0DB4F
          color #323330
        &.sass
          background-color #bf4080
          color white
        &.pug
          background-color #a86454
          color white
        &.svelte
          background-color: var(--svelte)
          color white
        &.netlify
          background-color: var(--netlify)
          color white
    .github
      position absolute
      top 18px
      right 18px
      a
        justify-self: start
        line-height 0
        svg
          height 35px
          width 35px
          background-color lightgrey
          stroke white
          border-radius 50%
          padding 4px
          transition all 0.3s
      &:hover
        svg
          stroke grey